<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 相机权限 -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- 存储权限 - 用于保存照片 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <!-- 网络权限 - 用于调用 ChatGPT API -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TraditionalChineseMedicineAIProj">

        <!-- Welcome Activity - Main Entry Point -->
        <activity
            android:name=".WelcomeActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Body Part Selection Activity -->
        <activity
            android:name=".BodyPartSelectionActivity"
            android:exported="false"
            android:parentActivityName=".WelcomeActivity"
            android:screenOrientation="portrait" />

        <!-- Acupoint Selection Activity -->
        <activity
            android:name=".AcupointSelectionActivity"
            android:exported="false"
            android:parentActivityName=".BodyPartSelectionActivity"
            android:screenOrientation="portrait" />

        <!-- Main Detection Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:parentActivityName=".AcupointSelectionActivity"
            android:screenOrientation="portrait" />

        <!-- Chat Activity - AI Q&A -->
        <activity
            android:name=".ChatActivity"
            android:exported="false"
            android:parentActivityName=".WelcomeActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- Chat Settings Activity -->
        <activity
            android:name=".ChatSettingsActivity"
            android:exported="false"
            android:parentActivityName=".ChatActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>