<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 相机权限 -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- 存储权限 - 用于保存照片 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <!-- 网络权限 - 用于调用 ChatGPT API -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 通知权限 - 用于任务提醒 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TraditionalChineseMedicineAIProj">

        <!-- Main Activity - Bottom Navigation (New Entry Point) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Welcome Activity - Legacy Entry Point -->
        <activity
            android:name=".WelcomeActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Body Part Selection Activity -->
        <activity
            android:name=".BodyPartSelectionActivity"
            android:exported="false"
            android:parentActivityName=".WelcomeActivity"
            android:screenOrientation="portrait" />

        <!-- Acupoint Selection Activity -->
        <activity
            android:name=".AcupointSelectionActivity"
            android:exported="false"
            android:parentActivityName=".BodyPartSelectionActivity"
            android:screenOrientation="portrait" />

        <!-- Hand Detection Activity (原 MainActivity) -->
        <activity
            android:name=".HandDetectActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />

        <!-- Doctor Detail Activity -->
        <activity
            android:name=".DoctorDetailActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />

        <!-- Doctor Schedule Activity -->
        <activity
            android:name=".DoctorScheduleActivity"
            android:exported="false"
            android:parentActivityName=".DoctorDetailActivity"
            android:screenOrientation="portrait" />

        <!-- Report Activity -->
        <activity
            android:name=".ReportActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />

        <!-- Medical Records Activity -->
        <activity
            android:name=".MedicalRecordsActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />

        <!-- Lecture List Activity -->
        <activity
            android:name=".LectureListActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />

        <!-- Department Detail Activity -->
        <activity
            android:name=".DepartmentDetailActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />

        <!-- Chat Activity - AI Q&A -->
        <activity
            android:name=".ChatActivity"
            android:exported="false"
            android:parentActivityName=".WelcomeActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- Chat Settings Activity -->
        <activity
            android:name=".ChatSettingsActivity"
            android:exported="false"
            android:parentActivityName=".ChatActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- Task Reminder Receiver -->
        <receiver
            android:name=".utils.TaskReminderReceiver"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>