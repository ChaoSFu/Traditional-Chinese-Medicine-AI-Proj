<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 顶部导航栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="16dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:tint="#333333"
                android:contentDescription="返回" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="帖子详情"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:gravity="center" />

            <View
                android:layout_width="48dp"
                android:layout_height="48dp" />
        </LinearLayout>

        <!-- 主内容区 ScrollView -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 帖子内容卡片 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- 作者信息 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/ivAuthorAvatar"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_doctor_avatar"
                                android:contentDescription="作者头像" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:id="@+id/tvAuthorName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="张医生"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:textColor="#333333" />

                                    <TextView
                                        android:id="@+id/tvAuthorRole"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:text="医生"
                                        android:textSize="11sp"
                                        android:background="@drawable/bg_tag_premium"
                                        android:paddingStart="8dp"
                                        android:paddingEnd="8dp"
                                        android:paddingTop="2dp"
                                        android:paddingBottom="2dp"
                                        android:textColor="@android:color/white" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvPostTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="2025-10-28 10:30"
                                    android:textSize="12sp"
                                    android:textColor="#999999" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- 帖子标题 -->
                        <TextView
                            android:id="@+id/tvPostTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="按太冲穴真的能缓解头痛吗？"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#222222"
                            android:lineSpacingExtra="2dp" />

                        <!-- 话题分类 -->
                        <TextView
                            android:id="@+id/tvCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="# 经络与穴位"
                            android:textSize="12sp"
                            android:textColor="@color/tcm_primary_dark"
                            android:background="@drawable/bg_tag_category"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp" />

                        <!-- 帖子内容 -->
                        <TextView
                            android:id="@+id/tvPostContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="帖子完整内容..."
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:lineSpacingExtra="4dp" />

                        <!-- 分隔线 -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:background="#E0E0E0" />

                        <!-- 互动统计 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tvLikesCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="53人点赞"
                                android:textSize="13sp"
                                android:textColor="#999999" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:text="·"
                                android:textSize="13sp"
                                android:textColor="#999999" />

                            <TextView
                                android:id="@+id/tvViewsCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:text="301次浏览"
                                android:textSize="13sp"
                                android:textColor="#999999" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 评论区标题 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="全部评论"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <!-- 评论列表 -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerComments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:nestedScrollingEnabled="false" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- 底部操作栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:elevation="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical">

            <!-- 评论输入框 -->
            <EditText
                android:id="@+id/etComment"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="说说你的看法..."
                android:textSize="14sp"
                android:background="@drawable/bg_tag_default"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:maxLines="1" />

            <!-- 点赞按钮 -->
            <ImageButton
                android:id="@+id/btnLike"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_like"
                android:tint="#999999"
                android:contentDescription="点赞" />

            <!-- 收藏按钮 -->
            <ImageButton
                android:id="@+id/btnCollect"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_favorite"
                android:tint="#999999"
                android:contentDescription="收藏" />
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
