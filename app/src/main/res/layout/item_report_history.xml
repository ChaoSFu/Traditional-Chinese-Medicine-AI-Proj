<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 顶部：日期和状态 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvReportDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2025-10-27 10:30"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tvReportStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已回复"
                android:textSize="12sp"
                android:textColor="@color/tcm_primary"
                android:background="@drawable/bg_tag_category"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />
        </LinearLayout>

        <!-- 症状标签 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="症状："
                android:textSize="13sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tvSymptoms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="头痛、失眠、食欲不振"
                android:textSize="13sp"
                android:textColor="#333333"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- 严重程度 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="程度："
                android:textSize="13sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tvSeverity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中度"
                android:textSize="12sp"
                android:textColor="#FF6F00"
                android:background="@drawable/bg_tag_default"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- 有医生回复时显示标识 -->
            <LinearLayout
                android:id="@+id/layoutDoctorReply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_doctor"
                    android:tint="@color/tcm_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="医生已回复"
                    android:textSize="12sp"
                    android:textColor="@color/tcm_primary" />
            </LinearLayout>
        </LinearLayout>

        <!-- 描述预览 -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="最近一周经常头痛，主要集中在太阳穴位置..."
            android:textSize="13sp"
            android:textColor="#666666"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp" />

        <!-- 底部操作按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:id="@+id/btnViewDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看详情 >"
                android:textSize="13sp"
                android:textColor="@color/tcm_primary"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
