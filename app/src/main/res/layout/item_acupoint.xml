<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Checkbox -->
        <CheckBox
            android:id="@+id/checkboxAcupoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Name CN -->
            <TextView
                android:id="@+id/textAcupointNameCn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合谷"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Name EN & ID -->
            <TextView
                android:id="@+id/textAcupointNameEn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="LI4 - Hegu"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <!-- Meridian -->
            <TextView
                android:id="@+id/textMeridian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="经络：手阳明大肠经"
                android:textSize="14sp" />

            <!-- Location -->
            <TextView
                android:id="@+id/textLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="定位：手背第1、2掌骨之间"
                android:textSize="13sp" />

            <!-- Functions -->
            <TextView
                android:id="@+id/textFunctions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="主治：头痛、牙痛、咽喉肿痛"
                android:textColor="#FF6F00"
                android:textSize="13sp"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
