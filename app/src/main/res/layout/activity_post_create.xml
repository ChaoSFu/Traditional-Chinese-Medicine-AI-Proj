<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- 顶部导航栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="#333333"
            android:contentDescription="返回" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="发布帖子"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center" />

        <Button
            android:id="@+id/btnPublish"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="发布"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_tag_premium"
            android:paddingStart="20dp"
            android:paddingEnd="20dp" />
    </LinearLayout>

    <!-- 主内容区 ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 标题输入 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <EditText
                    android:id="@+id/etTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入帖子标题"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textColorHint="#BDBDBD"
                    android:background="@android:color/white"
                    android:padding="16dp"
                    android:maxLines="2"
                    android:maxLength="50"
                    android:inputType="textCapSentences" />
            </com.google.android.material.card.MaterialCardView>

            <!-- 分类选择 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="选择话题分类"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp" />

                    <!-- 分类标签容器 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- 第一行 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:id="@+id/tagPatient"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:text="病友交流"
                                android:textSize="13sp"
                                android:textColor="#666666"
                                android:background="@drawable/bg_tag_default"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:gravity="center"
                                android:clickable="true"
                                android:focusable="true" />

                            <TextView
                                android:id="@+id/tagWellness"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:text="养生调理"
                                android:textSize="13sp"
                                android:textColor="#666666"
                                android:background="@drawable/bg_tag_default"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:gravity="center"
                                android:clickable="true"
                                android:focusable="true" />

                            <TextView
                                android:id="@+id/tagDiet"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="药膳食疗"
                                android:textSize="13sp"
                                android:textColor="#666666"
                                android:background="@drawable/bg_tag_default"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:gravity="center"
                                android:clickable="true"
                                android:focusable="true" />
                        </LinearLayout>

                        <!-- 第二行 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tagMeridian"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:text="经络与穴位"
                                android:textSize="13sp"
                                android:textColor="#666666"
                                android:background="@drawable/bg_tag_default"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:gravity="center"
                                android:clickable="true"
                                android:focusable="true" />

                            <TextView
                                android:id="@+id/tagDoctor"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:text="医生分享"
                                android:textSize="13sp"
                                android:textColor="#666666"
                                android:background="@drawable/bg_tag_default"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:gravity="center"
                                android:clickable="true"
                                android:focusable="true" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 内容输入 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <EditText
                    android:id="@+id/etContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="分享你的想法、经验或问题..."
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:textColorHint="#BDBDBD"
                    android:background="@android:color/white"
                    android:padding="16dp"
                    android:gravity="start|top"
                    android:minHeight="200dp"
                    android:inputType="textMultiLine|textCapSentences"
                    android:scrollbars="vertical" />
            </com.google.android.material.card.MaterialCardView>

            <!-- 提示文字 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="温馨提示：请文明发言，尊重他人，共同营造良好的交流氛围"
                android:textSize="12sp"
                android:textColor="#999999"
                android:gravity="center" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
